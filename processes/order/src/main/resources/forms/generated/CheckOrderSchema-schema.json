{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "type" : "object",
  "properties" : {
    "customerName" : {
      "type" : "string",
      "minLength" : 1
    },
    "deliveryAddress" : {
      "type" : "object",
      "properties" : {
        "city" : {
          "type" : "string",
          "minLength" : 1
        },
        "street" : {
          "type" : "string",
          "minLength" : 1
        },
        "zipCode" : {
          "type" : "string",
          "minLength" : 5,
          "maxLength" : 5
        }
      },
      "required" : [ "city", "street", "zipCode" ]
    },
    "isOrderValid" : {
      "type" : "boolean"
    },
    "items" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer"
          },
          "quantity" : {
            "type" : "integer"
          }
        }
      }
    }
  },
  "required" : [ "customerName", "isOrderValid" ]
}